<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginStart="@dimen/dimens_16dp"
    android:layout_marginEnd="@dimen/dimens_16dp"
    android:background="@drawable/commonview_all_corner_shape_10"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/dimens_10dp"
    android:paddingEnd="@dimen/dimens_10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:src="@drawable/ic_pick_up_location" />

    <TextView
        android:id="@+id/pick_up_title"
        style="@style/CommonView_TV_DESC_Black"
        android:layout_marginEnd="@dimen/dimens_10dp"
        android:text="@string/biz_pick_up_at" />


    <TextView
        android:id="@+id/pick_up_site"
        style="@style/CommonView_TV_DESC_Black_Medium"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:lines="1"
        android:drawablePadding="@dimen/dimens_2dp"
        android:drawableEnd="@drawable/ic_more_small"
        android:textColor="@color/primary"
        tools:text="Yas" />
</LinearLayout>