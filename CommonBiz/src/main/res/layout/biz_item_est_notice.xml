<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/commonview_all_corner_shape_black_4"
    android:minWidth="58dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimens_6dp"
    android:paddingTop="@dimen/dimens_2dp"
    android:paddingEnd="@dimen/dimens_6dp"
    android:paddingBottom="@dimen/dimens_2dp">

    <TextView
        android:id="@+id/est_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/global_text_size_level_7" />

    <TextView
        android:id="@+id/est_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/global_text_size_level_7" />
</LinearLayout>