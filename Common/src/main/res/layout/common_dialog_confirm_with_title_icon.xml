<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="288dp"
    android:layout_height="wrap_content"
    android:background="@drawable/commonview_all_corner_shape_8"
    android:padding="@dimen/dimens_20dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_title"
        style="@style/CommonView_TV_H4"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        tools:text="11111111" />

    <TextView
        android:id="@+id/dialog_content"
        style="@style/CommonView_TV_DESC_14sp_Black"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimens_6dp"
        android:gravity="center"
        android:textColor="@color/commonview_color_3B445C"
        app:layout_constraintTop_toBottomOf="@id/dialog_title"
        tools:text="11111111" />

    <ai.txai.common.widget.txaiButton.TxaiButton
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_20dp"
        app:positiveText="@string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>