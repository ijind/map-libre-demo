<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/commonview_search_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="@string/commonview_search_hint"
        android:inputType="text"
        android:maxLines="1"
        android:paddingStart="16dp"
        android:layout_marginEnd="@dimen/dimens_5dp"
        android:textColor="@color/commonview_black_normal"
        android:textColorHint="@color/commonview_grey_c3"
        android:textCursorDrawable="@drawable/commonview_edit_cursor"
        android:textSize="@dimen/global_text_size_level_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/remove_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/remove_img"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingEnd="10dp"
        android:visibility="gone"
        android:src="@mipmap/ic_delete_input"
        app:layout_constraintBottom_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/searchView" />
</androidx.constraintlayout.widget.ConstraintLayout>