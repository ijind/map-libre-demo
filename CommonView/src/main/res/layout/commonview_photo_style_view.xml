<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/take_photo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/commonview_user_take_photo"
        android:textColor="@color/commonview_black_normal"
        android:textSize="@dimen/global_text_size_level_5"
        android:background="@drawable/commonview_item_top_click_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/commonview_grey_eb"
        app:layout_constraintTop_toBottomOf="@id/take_photo" />

    <TextView
        android:id="@+id/choose_photo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/commonview_user_choose_photo"
        android:textColor="@color/commonview_black_normal"
        android:textSize="@dimen/global_text_size_level_5"
        android:background="@drawable/commonview_item_middle_click_bg"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintTop_toTopOf="@id/line" />

    <View
        android:id="@+id/place_holder_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/commonview_grey_f6"
        app:layout_constraintTop_toBottomOf="@id/choose_photo" />

    <TextView
        android:id="@+id/cancel_choose_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/commonview_cancel"
        android:textColor="@color/commonview_grey_99"
        android:textSize="@dimen/global_text_size_level_5"
        android:background="@drawable/commonview_item_middle_click_bg"
        app:layout_constraintTop_toBottomOf="@id/place_holder_view" />

    <View
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#00000000"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cancel_choose_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>