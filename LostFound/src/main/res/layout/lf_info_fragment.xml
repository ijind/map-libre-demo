<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/dimens_20dp">

    <ImageView
        android:id="@+id/contact_for_help_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_30dp"
        android:src="@mipmap/ic_contact_for_help"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_us_title_tv"
        style="@style/CommonView_TV_DESC"
        android:layout_marginStart="@dimen/dimens_20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/commonview_black_normal"
        android:textSize="@dimen/global_text_size_level_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contact_for_help_img" />

    <TextView
        android:id="@+id/contact_us_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:layout_marginEnd="@dimen/dimens_20dp"
        android:lineSpacingExtra="3dp"
        android:minHeight="384dp"
        android:textColor="@color/commonview_color_3B445C"
        android:textSize="@dimen/global_text_size_level_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/contact_us_title_tv"
        app:layout_constraintTop_toBottomOf="@id/contact_us_title_tv" />


    <LinearLayout
        android:id="@+id/ll_process_progress_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_20dp"
        android:background="@drawable/commonview_all_corner_shape_fafafa_8"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/contact_us_content_tv">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginEnd="@dimen/dimens_10dp"
            android:layout_marginBottom="@dimen/dimens_20dp"
            android:src="@mipmap/lf_ic_process" />

        <TextView
            style="@style/CommonView_TV_DESC_Black"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/lf_lost_process_query" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimens_16dp"
            android:src="@drawable/ic_more" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
