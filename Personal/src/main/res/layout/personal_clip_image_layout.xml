<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.91" />

    <ai.txai.personal.widget.ClipViewLayout
        android:id="@+id/common_clip_rectangle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:clipBorderWidth="1dp"
        app:clipType="rectangle"
        app:horizontalPadding="12dp" />

    <TextView
        android:id="@+id/common_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/commonview_cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/global_text_size_level_5"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/common_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:text="@string/personal_confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/global_text_size_level_5"
        app:layout_constraintBottom_toTopOf="@id/guideline_bottom"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>